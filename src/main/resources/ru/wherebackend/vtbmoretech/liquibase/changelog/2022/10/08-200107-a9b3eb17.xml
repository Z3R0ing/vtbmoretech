<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="vtbmt">
        <createTable tableName="VTBMT_PARTICIPANT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_VTBMT_PARTICIPANT"/>
            </column>
            <column name="EMPLOYEE_ID" type="UUID"/>
            <column name="EVENT_ID" type="UUID"/>
            <column name="APPROVED" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="vtbmt">
        <addColumn tableName="VTBMT_NEWS">
            <column name="TOPIC_NAME" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="vtbmt">
        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_ID" baseTableName="VTBMT_PARTICIPANT"
                                 constraintName="FK_VTBMTPARTICIPAN_ON_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="VTBMT_EMPLOYEE"/>
    </changeSet>
    <changeSet id="4" author="vtbmt">
        <addForeignKeyConstraint baseColumnNames="EVENT_ID" baseTableName="VTBMT_PARTICIPANT"
                                 constraintName="FK_VTBMT_PARTICIPANT_ON_EVENT" referencedColumnNames="ID"
                                 referencedTableName="VTBMT_EVENT"/>
    </changeSet>
    <changeSet id="5" author="vtbmt">
        <dropTable cascadeConstraints="true" tableName="VTBMT_TOPIC"/>
    </changeSet>
    <changeSet id="6" author="vtbmt">
        <dropColumn columnName="TOPIC" tableName="VTBMT_NEWS"/>
    </changeSet>
</databaseChangeLog>