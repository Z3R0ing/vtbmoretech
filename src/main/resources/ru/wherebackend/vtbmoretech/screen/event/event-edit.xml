<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://eventEdit.caption"
        focusComponent="form">
    <data>
        <instance id="eventDc"
                  class="ru.wherebackend.vtbmoretech.entity.event.Event">
            <fetchPlan extends="_base">
                <property name="achievements" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="achviementsDc" property="achievements"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="eventDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="descriptionField" property="description"/>
                <dateField id="dateStartField" property="dateStart"/>
                <dateField id="dateEndField" property="dateEnd"/>
            </column>
        </form>
        <groupBox id="achviementsBox" caption="msg://ru.wherebackend.vtbmoretech.entity.event/Event.achievements">
            <table id="achviementsTable" dataContainer="achviementsDc" width="100%" height="200px">
                <actions>
                    <action id="createAction" type="create"/>
                    <action id="editAction" type="edit"/>
                    <action id="removeAction" type="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="description"/>
                    <column id="dateOfReceiving"/>
                </columns>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
